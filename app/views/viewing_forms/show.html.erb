<div id="ViewingForm">
  <div id="ViewingFormTitle">
    <h5><%= @viewing_form.program_title.upcase %> Viewing Form</h5>
  </div>

  <div class="main-form-part">
    <div class="row">
      <div class="col">
        <div class="row-in">
          <%= label_tag 'name', nil, class: 'col-30' %>
          <%= text_field_tag 'senderName', @viewing_form.user.full_name, readonly: true, class: "col-70 form-control" %>
        </div>
        <div class="row-in">
          <%= label_tag 'email', nil, class: 'col-30' %>
          <%= email_field_tag 'senderEmail', @viewing_form.user.email, readonly: true, class: "col-70 form-control" %>
        </div>
        <div class="row-in">
          <%= label_tag 'Contact No', nil, class: 'col-30' %>
          <%= text_field_tag 'Contact No', @viewing_form.contact_number, readonly: true, class: "col-70 form-control" %>
        </div>
        <div class="row-in">
          <%= label_tag 'Ingest Date', nil, class: 'col-30' %>
          <%= text_field_tag 'Ingest Date', @viewing_form.ingest_date.to_date, readonly: true, class: "col-70 form-control" %>
        </div>
        <div class="row-in">
          <%= label_tag 'Aspect Ratio', nil, class: 'col-30' %>
          <%= text_field_tag 'Aspect Ration', @viewing_form.aspect_ratio, readonly: true, class: "col-70 form-control" %>
        </div>
      </div>
      <div class="col">
        <div class="row-in">
          <%= label_tag 'date', nil, class: 'col-30' %>
          <%= text_field_tag 'date', @viewing_form.created_at.to_date, readonly: true, class: "col-70 form-control" %>
        </div>
        <div class="row-in">
          <%= label_tag 'Programme Title', nil, class: 'col-30' %>
          <%= text_field_tag 'Programme Title', @viewing_form.program_title, readonly: true, class: "col-70 form-control" %>
        </div>
        <div class="row-in">
          <%= label_tag 'Programme ID', nil, class: 'col-30' %>
          <%= text_field_tag 'Programme ID', @viewing_form.program_id, readonly: true, class: "col-70 form-control" %>
        </div>
        <div class="row-in">
          <%= label_tag 'TX Date', nil, class: 'col-30' %>
          <%= text_field_tag 'TX Date', @viewing_form.tx_date.to_date, readonly: true, class: "col-70 form-control" %>
        </div>
        <div class="row-in">
          <%= label_tag 'No of Parts', nil, class: 'col-30' %>
          <%= text_field_tag 'No of Parts', @viewing_form.number_of_parts, readonly: true, class: "col-70 form-control" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Parts Info -->
  <div class="parts">
    <% @viewing_form.parts.each_with_index do |part, i| %>
      <div class='Titled-row'>
        <div id="RowTitle">
          <h3> Part: <%= i + 1 %></h3>
        </div>
        <div class="row">
          <div class="col">
            <div class="row-in">
              <%= label_tag 'IN', nil, class: 'col-30' %>
              <%= text_field_tag 'IN', part.start, readonly: true, class: "col-70 form-control" %>
            </div>
            <div class="row-in">
              <%= label_tag 'OUT', nil, class: 'col-30' %>
              <%= text_field_tag 'OUT', part.finish, readonly: true, class: "col-70 form-control" %>
            </div>
            <div class="row-in">
              <%= label_tag 'DUR', nil, class: 'col-30' %>
              <%= text_field_tag 'DUR', part.duration, readonly: true, class: "col-70 form-control" %>
            </div>
          </div>
          <div class="col">
            <div class="comments-row">
              <%= label_tag 'Notes', nil, class: 'col-3' %>
              <%= text_area_tag 'Notes', part.notes, rows: 3, cols: 50, readonly: true, class: 'notes form-control' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <div id="BtnsDiv">
  <hr>
    <div class="row">
      <div class="col">
        <%= button_tag type: 'submit', class: 'btn btn-block btn-lg btn-info', :onclick => "return window.print();" do %>
          <i class="bi bi-printer"></i>
          Print Form
        <% end %>
      </div>
      <div class="col">
        <%= link_to resend_viewing_form_path(@viewing_form), method: :post, data: { confirm: 'Are you sure?' }, class: 'btn btn-block btn-lg btn-info' do %>
          <i class="bi bi-envelope"></i>
          Resend Form
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if current_user %>
  <div class="row justify-content-center">
    <%= link_to viewing_forms_path do %>
      <i class="bi bi-backspace"></i>
      Back
    <% end %>
  </div>
<% end %>

