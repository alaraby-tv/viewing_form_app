      <h2><%= pluralize(viewing_form.errors.count, "error") %> prohibited this viewing_form from being saved:</h2>

      <ul>
      <% viewing_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :program_title %>
    <%= form.text_field :program_title %>
  </div>

  <div class="field">
    <%= form.label :ingest_date %>
    <%= form.datetime_select :ingest_date %>
  </div>

  <div class="field">
    <%= form.label :aspect_ratio %>
    <%= form.text_field :aspect_ratio %>
  </div>

  <div class="field">
    <%= form.label :program_id %>
    <%= form.text_field :program_id %>
  </div>

  <div class="field">
    <%= form.label :tx_date %>
    <%= form.datetime_select :tx_date %>
  </div>

  <div class="field">
    <%= form.label :number_of_parts %>
    <%= form.number_field :number_of_parts %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
