<div class="row justify-content-md-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h3><%= t('.sign_up') %></h3>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group">
      <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name', autocomplete: 'first_name', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :last_name, autofocus: true, placeholder: 'Last Name', autocomplete: 'last_name', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: 'email', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", autocomplete: 'current-password', required: true, class: 'form-control' %>

      <% if @minimum_password_length %>
        <small class="form-text"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: 'current-password', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit t('.sign_up'), class: 'btn btn-info btn-block' %>
    </div>
    <%= render 'devise/shared/links' %>
  <% end %>
</div>
