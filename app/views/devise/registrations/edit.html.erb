<div class="row justify-content-md-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <h3><%= t('.title', resource: resource_name.to_s.humanize) %></h3>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group">
        <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name', autocomplete: 'first_name', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.text_field :last_name, autofocus: true, placeholder: 'Last Name', autocomplete: 'last_name', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: 'email', class: 'form-control' %>
      </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'New Password', autocomplete: 'new-password', class: 'form-control' %>

      <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: 'Confirm New Password', autocomplete: 'new-password', class: 'form-control'  %>
    </div>

    <div class="form-group">
      <%= f.password_field :current_password, placeholder: 'Current Password', autocomplete: 'current-password', class: 'form-control' %>

      <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
    </div>

    <div class="form-group">
      <%= f.submit t('.update'), class: 'btn btn-primary' %>
    </div>
    <%= link_to t('.back'), :back %>
  <% end %>
</div>
