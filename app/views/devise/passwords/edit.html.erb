<div class="row justify-content-md-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <h3><%= t('.change_your_password') %></h3>
    <%= bootstrap_devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'New Password', autofocus: true, required: true, class: 'form-control'  %>

      <% if @minimum_password_length %>
        <small class="form-text"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: 'Confirm New Password', autocomplete: 'off', required: true, class: 'form-control'  %>
    </div>

    <div class="form-group">
      <%= f.submit t('.change_my_password'), class: 'btn btn-info btn-block' %>
    </div>
    <%= render 'devise/shared/links' %>
  <% end %>
</div>
