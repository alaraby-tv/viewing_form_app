<div class="row justify-content-md-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h3><%= t('.forgot_your_password') %></h3>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: 'email', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-info btn-block' %>
    </div>
    <%= render 'devise/shared/links' %>
  <% end %>
</div>
