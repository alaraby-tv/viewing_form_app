<div class="row justify-content-md-center">
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h3><%= t('.sign_in') %></h3>

    <div class="form-group">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: 'email', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: 'current-password', required: true, class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me, :style => "width: 22px; height: 14px;" %>
        <%= f.label :remember_me do %>
          <%= resource.class.human_attribute_name('remember_me') %>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit  t('.sign_in'), class: 'btn btn-info btn-block' %>
    </div>
    <%= render 'devise/shared/links' %>
  <% end %>

</div>
